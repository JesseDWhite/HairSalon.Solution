@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Edit Information For:</h1>
<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="required"})

  @Html.LabelFor(model => model.HireDate, new {@class="form-label"})
  @Html.TextBoxFor(model => model.HireDate, new {@class="form-control", type="date", required="required"})

  @Html.LabelFor(model => model.BirthDay, new {@class="form-label"})
  @Html.TextBoxFor(model => model.BirthDay, new {@class="form-control", type="date", required="required"})

  @Html.LabelFor(model => model.Notes, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Notes, new {@class = "form-control", type="text"})

  <input type="submit" value="Save Changes" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to All Stylists", "Index")</p>