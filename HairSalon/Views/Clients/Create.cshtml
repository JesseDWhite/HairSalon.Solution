@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", id="name", required="required"})

  @Html.LabelFor(model => model.NextApp, new {@class="form-label"})
  @Html.TextBoxFor(model => model.NextApp, new {@class = "form-control", type="date"})

  @Html.LabelFor(model => model.Notes, new {@class="form-label"})
  @Html.TextAreaFor(model => model.Notes, new {@class = "form-control", type="text"})

  @Html.LabelFor(model => model.Stylist)
  <br />
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add Client" class="btn btn-success" />
}
<p>@Html.ActionLink("Back to All Clients", "Index")</p>